# Function to print a formatted multiplication table
def print_multiplication_table(number, up_to=10):
    print("\n✨ Sweet Multiplication Table ✨\n")
    print(f"🍭 Multiplication Table of {number} 🍭".center(40, "-"))
    
    for i in range(1, up_to + 1):
        print(f"🍬 {number} × {i} = {number * i}")
    
    print("-" * 40)

# Take user input
num = int(input("Enter a number to display its multiplication table: "))
limit = int(input("Enter the range (default is 10): "))

# Display the multiplication table
print_multiplication_table(num, limit)
